<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_activity_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michaellongcrawford.week05.ActivityOne"
    tools:showIn="@layout/activity_one">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Book"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:id="@+id/bookText"
        android:singleLine="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verse"
        android:ems="10"
        android:id="@+id/verseText"
        android:layout_below="@+id/chapterText"
        android:layout_alignStart="@+id/chapterText"
        android:layout_marginTop="23dp"
        android:selectAllOnFocus="false"
        android:inputType="text" />

    <Button
        android:text="Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verseText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:id="@+id/share"
        android:elevation="0dp"
        android:onClick="outputMessage" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Chapter"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/chapterText"
        android:layout_below="@+id/bookText"
        android:layout_alignStart="@+id/bookText" />
</RelativeLayout>
